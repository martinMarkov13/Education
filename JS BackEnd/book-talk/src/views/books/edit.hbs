<!-- In case of error, you should display div with class "errorContainer" -->
<!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
{{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div> 
{{/if}}

<section class="edit-form-container">
  <form method="POST">
    <h3>Edit Book Review</h3>
    <label>Title</label>
    <input
      type="text"
      name="title"
      class="box"
      value="{{book.title}}"
      id=""
    />
    <label>Author</label>
    <input type="text" name="author" class="box" value="{{book.author}}" id="" />
    <label>Genre</label>
    <input type="text" name="genre" class="box" value="{{book.genre}}" id="" />
    <label>Stars</label>
    <input type="number" name="stars" class="box" value="{{book.stars}}" id="" />
    <label>Image</label>
    <input type="text" name="image" class="box" value="{{book.image}}" id="" />
    <label>Review</label>
    <textarea class="box" name="review">{{book.review}}</textarea>
    <input type="submit" value="Edit" class="btn" />
  </form>
</section>